<% @meta_title = "Sponsors" %>
<% @meta_description = "Accounts that have sponsored maintainers on GitHub Sponsors" %>

<div class="container-sm">
  <ul class="nav nav-tabs my-3">
    <li class="nav-item">
      <a class="nav-link" href="<%= root_path %>">
        Maintainers
        <span class="badge bg-secondary rounded-pill">
          <%= number_with_delimiter Account.has_sponsors_listing.count %>
        </span>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link active" href="<%= sponsors_path %>">
        Sponsors
        <span class="badge bg-secondary rounded-pill">
          <%= number_with_delimiter Account.with_sponsorships.count %>
        </span>
      </a>
    </li>
    <%= render 'sort' %>
    <li class="nav-item ms-2">
      <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Status
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item <%= 'active' unless params[:active] == 'true' %>" href="<%= url_for(request.query_parameters.except(:active)) %>">All Sponsors</a></li>
          <li><a class="dropdown-item <%= 'active' if params[:active] == 'true' %>" href="<%= url_for(request.query_parameters.merge(active: 'true')) %>">Active Only</a></li>
        </ul>
      </div>
    </li>
    <li class="nav-item ms-2">
      <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Type
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item <%= 'active' unless params[:kind].present? %>" href="<%= url_for(request.query_parameters.except(:kind)) %>">All Types</a></li>
          <li><a class="dropdown-item <%= 'active' if params[:kind] == 'user' %>" href="<%= url_for(request.query_parameters.merge(kind: 'user')) %>">Users</a></li>
          <li><a class="dropdown-item <%= 'active' if params[:kind] == 'organization' %>" href="<%= url_for(request.query_parameters.merge(kind: 'organization')) %>">Organizations</a></li>
        </ul>
      </div>
    </li>
  </ul>

  <%= render @accounts %>
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages && @pagy.pages > 1 %>  
</div>